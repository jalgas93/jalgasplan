<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    app:cardCornerRadius="8dp"
       android:layout_margin="2dp"
    android:layout_gravity="center"
       android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/rv_contact_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:padding="4dp"
        android:src="@drawable/rv_contact_antenna"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/rv_contact_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/rv_contact_image"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/rv_contact_sidename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
               android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/rv_contact_number"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/rv_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
               android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/rv_contact_image"
        app:layout_constraintTop_toBottomOf="@id/rv_contact_sidename"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

</FrameLayout>